<?xml version="1.0" encoding="utf-8"?>
<com.vension.multistatuslayout.MultiStatusLayout
        android:id="@+id/main_MSLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:padding="15dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="this use MultiStatusLayout for xml"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_warpActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@drawable/shape_default_retry"
                android:textColor="#009844"
                android:text="wrap_Activity"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_warpFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@drawable/shape_default_retry"
                android:textColor="#009844"
                android:text="wrap_Fragment"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_warpView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@drawable/shape_default_retry"
                android:textColor="#009844"
                android:text="wrap_View"/>
    </LinearLayout>
</com.vension.multistatuslayout.MultiStatusLayout>