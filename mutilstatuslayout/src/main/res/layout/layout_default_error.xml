<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/iv_page_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_default_error"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tv_page_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/page_error_load"
            android:textSize="14sp"
            android:textColor="#cdcdcd"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tv_page_error_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/page_error_retry"
            android:textSize="14sp"
            android:textColor="#009844"
            android:background="@drawable/shape_default_retry"/>

</LinearLayout>