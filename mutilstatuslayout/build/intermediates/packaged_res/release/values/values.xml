<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="iv_page_empty" type="id"/>
    <item name="iv_page_error" type="id"/>
    <item name="pb_loading" type="id"/>
    <item name="tv_page_empty" type="id"/>
    <item name="tv_page_error" type="id"/>
    <item name="tv_page_error_retry" type="id"/>
    <item name="tv_page_loading" type="id"/>
    <string name="app_name">MutilStatusLayout</string>
    <string name="page_empty">暂无数据!!!</string>
    <string name="page_error_load">加载失败！</string>
    <string name="page_error_retry">点击重试</string>
    <string name="page_loading">加载中...</string>
    <string name="page_not_network">网络连接不可用</string>
    <style name="MultiStatusLayout">
    </style>
    <style name="MultiStatusLayout.Style">
        <item name="msl_EmptyResId">@layout/layout_default_empty</item>
        <item name="msl_LoadingResId">@layout/layout_default_loading</item>
        <item name="msl_ErrorResId">@layout/layout_default_error</item>

        <item name="msl_TextColor">#999999</item>
        <item name="msl_TextSize">16sp</item>

        <item name="msl_RetryTextColor">#009844</item>
        <item name="msl_RetryTextSize">16sp</item>
        <item name="msl_RetryBackground">@drawable/shape_default_retry</item>
        <item name="msl_RetryText">@string/page_error_retry</item>

        <item name="msl_LoadingColor">#009844</item>
        <item name="msl_LoadingText">@string/page_loading</item>

        <item name="msl_EmptyImage">@drawable/img_default_empty</item>
        <item name="msl_EmptyText">@string/page_empty</item>

        <item name="msl_ErrorImage">@drawable/img_default_error</item>
        <item name="msl_ErrorText">@string/page_error_load</item>

    </style>
    <declare-styleable name="MultiStatusLayout">
        <!-- 空布局资源id -->
        <attr format="reference" name="msl_EmptyResId"/>
        <!-- 加载中布局资源id -->
        <attr format="reference" name="msl_LoadingResId"/>
        <!-- 错误布局资源id -->
        <attr format="reference" name="msl_ErrorResId"/>

        <!-- 空布局图片 -->
        <attr format="reference" name="msl_EmptyImage"/>
        <!-- 空布局文本 -->
        <attr format="string" name="msl_EmptyText"/>

        <!-- 错误布局图片 -->
        <attr format="reference" name="msl_ErrorImage"/>
        <!-- 错误布局文本 -->
        <attr format="string" name="msl_ErrorText"/>
        <!-- 错误布局重试按钮文本 -->
        <attr format="string" name="msl_RetryText"/>

        <!-- loading布局加载文本 -->
        <attr format="string" name="msl_LoadingText"/>
        <!-- loading布局加载文本颜色 -->
        <attr format="color" name="msl_LoadingColor"/>

        <!-- 文本颜色 -->
        <attr format="color" name="msl_TextColor"/>
        <!-- 文本尺寸 -->
        <attr format="dimension" name="msl_TextSize"/>

        <!-- 重试文本颜色 -->
        <attr format="color" name="msl_RetryTextColor"/>
        <!-- 重试文本尺寸 -->
        <attr format="dimension" name="msl_RetryTextSize"/>
        <!-- 重试背景 -->
        <attr format="reference" name="msl_RetryBackground"/>
    </declare-styleable>
</resources>